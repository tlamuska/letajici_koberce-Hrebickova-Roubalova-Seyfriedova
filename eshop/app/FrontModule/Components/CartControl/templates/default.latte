{varType App\Model\Entities\Cart $cart}
{snippet}
  <div>

    {if empty($cart) || $cart->getTotalCount()==0}
      košík je prázdný
      <a href="{plink Cart:default}" class="btn btn-outline-primary d-block">Přejít do košíku</a>
    {else}
      {var $cartTotalCount = $cart->getTotalCount();}
      v košíku je {$cartTotalCount} {if $cartTotalCount==1}položka{elseif $cartTotalCount<5}položky{else}položek{/if} za {$cart->getTotalPrice()|number:0,',',' '} Kč
      <a href="{plink Cart:default}" class="btn btn-outline-primary d-block">Přejít do košíku</a>
    {/if}

  </div>
{/snippet}